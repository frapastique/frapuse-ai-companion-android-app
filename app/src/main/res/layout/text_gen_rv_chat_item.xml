<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_whole_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_chat_instructions"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mcv_chat_instructions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        app:cardCornerRadius="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:layout_constraintStart_toStartOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cl_chat_item_instructions"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:background="@color/dark_grey">

                        <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tv_instructions"
                                android:text="@string/instructions"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="visible"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent" />

                        <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tv_instructions_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/tv_instructions"
                                tools:text="@string/app_description" />

                        <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tv_info_instructions"
                                android:textSize="7sp"
                                android:textColor="@color/grey"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/tv_instructions_text"
                                tools:text="Tokens: 16 - Date: 04.05.23 - Time: 16:20:42"
                                tools:ignore="SmallSp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_chat_human"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_chat_instructions"
                app:layout_constraintEnd_toEndOf="parent">

            <Space
                    android:id="@+id/spacer_left"
                    android:layout_width="34dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_for_spacer_left"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:backgroundTint="@color/transparent"
                    app:layout_constraintStart_toEndOf="@id/spacer_left"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mcv_chat_item_human"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        app:cardCornerRadius="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:layout_constraintStart_toStartOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cl_chat_item_human"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:background="@color/dark_grey">

                        <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/siv_profile_picture_human"
                                android:layout_width="42dp"
                                android:layout_height="42dp"
                                android:background="@color/purple_200"
                                android:visibility="gone"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:shapeAppearanceOverlay="@style/roundedCorners"
                                tools:src="@tools:sample/avatars" />

                        <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tv_sent_from_human"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:visibility="gone"
                                app:layout_constraintStart_toEndOf="@+id/siv_profile_picture_human"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                tools:text="@string/chat_ai" />

                        <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tv_message_text_human"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toEndOf="@+id/siv_profile_picture_human"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/tv_sent_from_human"
                                tools:text="@string/app_description" />

                        <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tv_message_info_human"
                                android:textSize="7sp"
                                android:textColor="@color/grey"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/tv_message_text_human"
                                tools:text="Tokens: 16 - Date: 04.05.23 - Time: 16:20:42"
                                tools:ignore="SmallSp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_chat_ai"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_chat_human"
                app:layout_constraintEnd_toEndOf="parent">

            <Space
                    android:id="@+id/spacer_right"
                    android:layout_width="34dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_for_spacer_right"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:backgroundTint="@color/transparent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/spacer_right"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mcv_chat_item_ai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        app:cardCornerRadius="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:layout_constraintEnd_toEndOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cl_chat_item_ai"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:background="@color/purple_1000">

                        <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/siv_profile_picture_ai"
                                android:layout_width="42dp"
                                android:layout_height="42dp"
                                android:background="@color/purple_200"
                                android:visibility="gone"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:shapeAppearanceOverlay="@style/roundedCorners"
                                tools:src="@tools:sample/avatars" />

                        <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tv_sent_from_ai"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:visibility="gone"
                                app:layout_constraintStart_toEndOf="@+id/siv_profile_picture_ai"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                tools:text="@string/chat_ai" />

                        <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tv_message_text_ai"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toEndOf="@+id/siv_profile_picture_ai"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/tv_sent_from_ai"
                                tools:text="@string/app_description" />

                        <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tv_message_info_ai"
                                android:textSize="7sp"
                                android:textColor="@color/grey"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/tv_message_text_ai"
                                tools:text="Tokens: 16 - Date: 04.05.23 - Time: 16:20:42"
                                tools:ignore="SmallSp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>